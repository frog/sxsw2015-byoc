   "dependencies": {
      "socket.io": "^2.3.0",
      "uuid": "^3.4.0",
      "vue": "^2.6.11",
      "js-cookie": "^2.2.1",
      "animejs": "^3.1.0",
      "howler": "^2.1.3",
      "normalize.css": "^8.0.1"
   },
   "devDependencies": {
      "@types/socket.io-client": "^1.4.32",
      "@types/animejs": "^3.1.0",
      "@types/js-cookie": "^2.2.4",
      "typescript": "^3.7.5",
      "tslib": "^1.10.0",
      "npm-run": "^5.0.1",
      "npm-scripts-watcher": "^1.0.2",
      "glob": "^7.1.6",
      "rollup": "^1.31.0",
      "@rollup/plugin-alias": "^3.0.0",
      "@rollup/plugin-commonjs": "^11.0.1",
      "@rollup/plugin-node-resolve": "^7.0.0",
      "@rollup/plugin-typescript": "^3.0.0",
      "rollup-plugin-terser": "^5.2.0",
      "svgstore": "^3.0.0-2",
      "postcss": "^7.0.26",
      "postcss-cli": "^7.1.0",
      "postcss-cssnext": "^3.1.0",
      "postcss-import": "^12.0.1",
      "postcss-inline-base64": "^4.1.0",
      "cssnano": "^4.1.10",
      "html-minifier": "^4.0.0"
   },
   "scripts": {
      "build": "npm run build:server && npm run build:client",
      "build:client": "npm run build:client:scripts && npm run build:client:styles && npm run build:client:graphics && npm run build:client:pages",
      "build:client:scripts": "node build/client/build-scripts.js",
      "build:client:styles": "node build/client/build-styles.js",
      "build:client:graphics": "node build/client/build-graphics.js",
      "build:client:pages": "node build/client/build-pages.js",
      "build:server": "",
      "clean": "npm run clean:client && npm run clean:server",
      "clean:client": "node build/client/clean.js",
      "clean:server": "node build/server/clean.js",
      "watch": "npm-scripts-watcher",
      "start": "node server/server.js"
   },
   "watch": {
      "src/client/scripts/*.ts": [
         "build:client:scripts"
      ],
      "src/client/graphics/*.svg": [
        "build:client:graphics"
     ],
      "src/client/styles/_*.css": [
         "build:client:styles"
      ],
      "src/client/*.html": [
         "build:client:pages"
      ]
   }
}
